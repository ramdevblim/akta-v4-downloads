<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="90dp"
    android:layout_marginHorizontal="4dp"
    android:background="@color/black"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/asset_preview_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder" />

    <TextView
        android:id="@+id/asset_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:background="@drawable/text_background_gradient_top_to_bottom"
        android:ellipsize="end"
        android:fontFamily="@font/heebo"
        android:lineSpacingExtra="-4sp"
        android:maxLines="2"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="Examples" />

    <TextView
        android:id="@+id/asset_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:background="@drawable/text_background_gradient_bottom_to_top"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:visibility="gone"
        tools:ignore="SmallSp"
        tools:text="1234567" />

</FrameLayout>