<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <ImageView
        android:id="@+id/seekButtonView"
        android:layout_margin="0dp"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:contentDescription="@string/seek"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/seekTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/seekButtonView"
        app:layout_constraintStart_toStartOf="@+id/seekButtonView"
        app:layout_constraintTop_toBottomOf="@+id/seekButtonView" />
</merge>